{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/HaoweiAn/3179/main/Assignment2/data/CarAgeProp.csv"
  },
  "title": "Car Age Distribution",
  "selection": {
      "highlight": {
        "type": "single"
      }
    },
  "mark": "arc",
  "encoding": {
    "theta": {
      "field": "proportion",
      "type": "quantitative"
    },
    "color": {
      "field": "age",
      "type": "nominal",
      "legend": {
          "title": "Car age range" 
      },
      "condition": {
          "selection": "highlight",
          "value": "steelblue"
        },
        "value": "lightgray"
    },
    "opacity": {
      "condition": {
        "selection": "highlight",
        "value": 1
      },
      "value": 0.5
    },
    "tooltip": [
      {"field": "age", "type": "nominal"},
      {"field": "proportion", "type": "quantitative", "format": ".2f"}
    ]
  }
}
